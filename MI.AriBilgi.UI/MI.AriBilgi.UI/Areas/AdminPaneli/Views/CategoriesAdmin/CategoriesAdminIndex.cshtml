@model IEnumerable<MI.AriBilgi.DLL.Categories>

@{
    ViewBag.Title = "CategoriesAdminIndex";
    Layout = "~/Areas/AdminPaneli/Views/Shared/AdminLayout.cshtml";
}




<div style="margin:8px;">

    <section class="content" style="margin-top:8px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" style="background-color:#343a40; color:white;">
                        <h3 class="card-title">KATEGORİ LİSTESİ</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">

                        <table class="table table-hover" style=" text-align:center; padding:5px;">
                            <tr>
                                <th style="border:1px solid #28a745;">
                                    Kategori Adı
                                </th>
                                <th style="border:1px solid #28a745;">
                                    İşlemler
                                </th>

                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" Edit", "CategoryEdit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success fas fa-edit" }) |
                                        @Html.ActionLink(" Delete", "CategoryDelete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger fas fa-trash-alt" })
                                    </td>
                                </tr>
                            }

                        </table>

                        <p style="margin:8px;">
                            @Html.ActionLink("Kategori Ekleme Sayfasına Git", "CreateCategory", "CategoriesAdmin", new { @class = "btn btn-success float-right" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

