@model MI.AriBilgi.DLL.Service

@{
    ViewBag.Title = "CreateService";
    Layout = "~/Areas/AdminPaneli/Views/Shared/AdminLayout.cshtml";
}


<div style="margin:8px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <section class="content" style="margin-top:8px;">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Servis Ekle</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body" style="display: block;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.ServiceAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ServiceAdi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ServiceAdi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12">

                                    @Html.ActionLink("Servis Listesine Git", "ServicesAdminIndex", "ServicesAdmin", new { @class = "btn btn-secondary" })
                                    <input type="submit" value="Servis Ekle" class="btn btn-info float-right">
                                </div>
                                <div>
                                    @ViewBag.ShowMessage
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card -->
                </div>

            </div>

        </section>
    }

</div>
